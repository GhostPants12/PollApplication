@model PollApplication.Models.PollModel

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

<h1>Опрос</h1>
<form asp-action="Poll" asp-controller="PollCreation">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите название опроса</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Type">Выберите тип опроса</label>
            <select asp-for="Type" asp-items="@Html.GetEnumSelectList(typeof(PollType))">
            </select>
            <span asp-validation-for="Type" />
        </div>
        <div class="form-group">
            <label asp-for="Count">Введите количество вопросов</label>
            <input type="text" asp-for="Count" />
            <span asp-validation-for="Count" />
        </div>
        <div class="form-group">
            <input type="submit" value="Далее" class="btn" style="background-color:lightgrey"/>
        </div>
    </div>
</form>
